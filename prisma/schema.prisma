generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // still uses pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // used by `prisma db push`
}

model Resume {
  id          String   @id @default(cuid())
  userId      String

  title       String?
  description String?

  summary     String?
  firstName   String?
  lastName    String?
  jobTitle    String?
  city        String?
  country     String?
  phone       String?
  email       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("resumes")
}
